@page "/home"
@inherits HomeTechBlazor.Components.Shared.AdminPageBase
@inject NavigationManager NavigationManager
@inject HomeTechBlazor.Components.Shared.CurrentUser CurrentUser

<PageTitle>Admin Dashboard</PageTitle>

<HeadContent>
    <link href="css/home.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="js/home.js?v=@DateTime.Now.Ticks"></script>
</HeadContent>

<div class="dashboard-wrapper">
    <!-- Header -->
    <header class="dashboard-header">
        <div class="container flex justify-between items-center">
            <h1>🏠 TECHFIX Admin</h1>
            <nav class="nav-links flex items-center space-x-4">
                @if (!string.IsNullOrEmpty(CurrentUser.name))
                {
                    <span class="welcome"> | Welcome, <b>@CurrentUser.name</b></span>
                    <a class="logout" href="/logout">Logout</a>
                }
                else
                {
                    <a href="/login">Login</a>
                }
            </nav>
        </div>
    </header>

    <!-- Main Dashboard -->
    <main class="dashboard-main container">
        <h2 class="section-title">📊 TRANG CHỦ</h2>

        <!-- Summary Cards -->
        <div class="stats-cards">
            <div class="card bg-blue">
                <h3>Thiết bị hoạt động</h3>
                <p class="value">142</p>
                <p class="sub">+5% từ tháng trước</p>
            </div>
            <div class="card bg-green">
                <h3>Tổng người dùng</h3>
                <p class="value">89</p>
                <p class="sub">+3 người dùng mới</p>
            </div>
            <div class="card bg-yellow">
                <h3>Thông báo hệ thống</h3>
                <p class="value">3</p>
                <p class="sub">Xem chi tiết</p>
            </div>
            <div class="card bg-purple">
                <h3>So Với  (Tháng hiện tại)</h3>
                <p class="value">12,540,000</p>
                <p class="sub">+12% so với tháng trước</p>
            </div>
        </div>

        <!-- Charts -->
        <div class="charts">
            <div class="chart-box">
                <h3>Thiết bị hoạt động (7 ngày qua)</h3>
                <canvas id="deviceActivityChart"></canvas>
            </div>
            <div class="chart-box">
                <h3>Trạng thái đặt dịch vụ</h3>
                <canvas id="ordersChart"></canvas>
            </div>
        </div>

        <!-- Recent Activity Table -->
        <div class="recent-orders">
            <h3>Hoạt động gần đây</h3>
            <table class="orders-table">
                <thead>
                    <tr>
                        <th>Thiết bị</th>
                        <th>Hành động</th>
                        <th>Người dùng</th>
                        <th>Thời gian</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Lắp đặt đèn thông minh</td>
                        <td>Đã lắp</td>
                        <td>@CurrentUser.name</td>
                        <td>10:30 AM</td>
                        <td><span class="status success">Tốt</span></td>
                    </tr>
                    <tr>
                        <td>Sửa máy tính</td>
                        <td>Đang sửa </td>
                        <td>John Doe</td>
                        <td>9:15 AM</td>
                        <td><span class="status pending">Đang chờ</span></td>
                    </tr>
                    <tr>
                        <td>Lắp đặt Camera</td>
                        <td>Đã lắp</td>
                        <td>Jack</td>
                        <td>8:45 AM</td>
                        <td><span class="status warning">Tốt</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>

    <!-- Footer -->
    <footer class="dashboard-footer">
        <div class="container text-center">
            <p>&copy; @DateTime.Now.Year HomeTech. All rights reserved.</p>
            <div class="footer-links">
                <a href="/about">About</a>
                <a href="/contact">Contact</a>
                <a href="/privacy">Privacy Policy</a>
            </div>
        </div>
    </footer>
</div>

@code {
    protected override void OnInitialized()
    {
        if (CurrentUser.name == string.Empty)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }

        if (CurrentUser.role == "customer")
        {
            NavigationManager.NavigateTo("/?error=forbidden");
        }
    }
}
